<?xml version="1.0" encoding="utf-8"?>

<!--Parent Layout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#363636">
        <!--Second Parent Layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <!--Child Parent Layout-->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <!--Texts-->
                        <TextView
                            android:id="@+id/titleRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="My Instagram Account"
                            android:textColor="@color/teal_700"
                            android:textSize="25sp">

                        </TextView>

                        <TextView
                            android:id="@+id/passwordContentRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="f'BN*****"
                            android:textColor="#FFC107"
                            android:textSize="20sp">

                        </TextView>

                        <TextView
                            android:id="@+id/dateRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="Tue Jun 20 12:30:45 GMT+03:00 2023"
                            android:textColor="@color/ic_launcher_background"
                            android:textSize="12sp">

                        </TextView>
                </LinearLayout>

                <!--Buttons-->

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:id="@+id/deleteButton"
                            android:background="@drawable/delete_icon">

                        </Button>

                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:id="@+id/editButton"
                            android:background="@drawable/edit_icon">

                        </Button>


                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:id="@+id/copyIcon"
                            android:background="@drawable/copy_icon">

                        </Button>


                </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>