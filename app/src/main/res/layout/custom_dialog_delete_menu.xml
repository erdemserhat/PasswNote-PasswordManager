<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/delete_dialog"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/round_section_rectangle_light_theme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/deleteWarningText"
        android:textColor="@color/main_text_color"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_warning_text"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/deleteMessageText"
        android:textColor="@color/main_text_color"
        android:textSize="20sp">

    </TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteButton"
            android:text="@string/deleteText"
            android:background="@drawable/button_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- BoÅŸluk -->
        <Space
            android:id="@+id/space"
            android:layout_width="100dp"
            android:layout_height="0dp"/>

        <!-- Second Button -->
        <Button
            android:id="@+id/cancelButton"
            android:background="@drawable/button_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelText" />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:gravity="center"
        android:text="@string/deleteActionWarningText"
        android:textColor="#DC1708"
        android:textSize="18sp"/>



</androidx.appcompat.widget.LinearLayoutCompat>