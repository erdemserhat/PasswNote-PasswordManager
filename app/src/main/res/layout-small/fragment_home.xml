<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <Switch
        android:id="@+id/character_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_section_rectangle_light_theme"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/allowChar"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/nightModeSwitch">

    </Switch>

    <Switch
        android:id="@+id/number_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_section_rectangle_light_theme"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/allowNum"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/nightModeSwitch" />

    <Switch
        android:id="@+id/special_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_section_rectangle_light_theme"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/allowSpecialChar"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/nightModeSwitch" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:clickable="false"
        android:padding="5dp"
        android:text="@string/lblEnterPassword"
        android:textAlignment="center"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="16"
        android:min="4"
        android:progress="8"
        android:progressBackgroundTint="#262383"
        android:progressDrawable="@drawable/custom_seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/hand_drag"
        />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center"
        android:background="@drawable/button_light"
        android:onClick="generate"
        android:padding="5dp"
        android:text="@string/btnPassword"
        android:textColor="@color/main_text_color"
        android:textSize="12sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_section_rectangle_light_theme"
        android:gravity="center"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/main_text_color"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_light"
        android:padding="5dp"
        android:text="@string/saveText"
        android:textColor="@color/main_text_color"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</androidx.appcompat.widget.LinearLayoutCompat>