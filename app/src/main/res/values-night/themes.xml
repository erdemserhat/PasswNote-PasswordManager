<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UltimateBox" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/subtitle_text_color</item>
        <item name="colorSecondaryVariant">@color/content_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--- Theme Style for Night Mode Switch -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/on_color</item>
        <item name="colorSwitchThumbNormal">@color/off_color</item>
        <item name="android:colorForeground">@color/main_text_color</item>
    </style>

    <!--- Theme Style for Notifications Switch -->
    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/on_color</item>
        <item name="colorSwitchThumbNormal">@color/off_color</item>
        <item name="android:colorForeground">@color/btn_color_light</item>
    </style>

    <!--- Theme Style for Private Account Switch -->
    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>